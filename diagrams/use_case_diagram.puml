  usecase "Cancelar Reserva" as UC5
  usecase "Crear Pedido" as UC6
  usecase "Añadir Platillo a Pedido" as UC7
  usecase "Actualizar Estado de Pedido" as UC8
  usecase "Generar Factura" as UC9
}

